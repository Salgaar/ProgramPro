@page "/fetchdata"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using ProgramPro.Shared
@using System.Security.Claims
@attribute [Authorize]
@inject HttpClient Http
@inject AuthenticationStateProvider AuthenticationStateProvider


<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast @id</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (statistics == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in statistics)
            {
                <tr>

                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string id = null;
    private List<Statistics> statistics = new List<Statistics>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            id = $"User Id: {user.FindFirst(c => c.Type == "sub")?.Value}";
            StateHasChanged();
            statistics = await Http.GetFromJsonAsync<List<Statistics>>("api/Statistics");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}
