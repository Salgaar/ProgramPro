@using System.Reflection;
@using System.ComponentModel.DataAnnotations;
@inject DialogService DialogService
@inject HttpClient Http
@inject NotificationService NotificationService

<RadzenRow>
    <RadzenListBox @bind-Value=@selectedComponentDefinitionId Data=@ComponentDefinitions TextProperty="Name" ValueProperty="Id" Style="height:400px; width:100%;" />
</RadzenRow>

            <RadzenRow>
    <RadzenButton Click=@Submit>Select</RadzenButton>
            </RadzenRow>


@code {
    [Parameter]
    public IEnumerable<ComponentDefinition> ComponentDefinitions { get; set; }
    int selectedComponentDefinitionId;

    void Submit()
    {
        var selectedComponentDefinition = ComponentDefinitions.FirstOrDefault(x => x.Id == selectedComponentDefinitionId);
        DialogService.Close(selectedComponentDefinition);
    }
}
