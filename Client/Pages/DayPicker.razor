@inject DialogService DialogService

<RadzenCard >
    <RadzenDatePicker Change="async(date) => await OpenAddDay(date)" TValue="DateTime?" InitialViewDate="DateTime.Now" YearRange="1900:2100" />
</RadzenCard>

@code {
    private async Task OpenAddDay(DateTime? date)
    {
        await DialogService.OpenAsync<AddDay>($"Add Day",
            new Dictionary<string, object>() { { "Date", date } },
            new DialogOptions() { Width = "700px", Height = "512px", Resizable = true, Draggable = true });
    }
}
