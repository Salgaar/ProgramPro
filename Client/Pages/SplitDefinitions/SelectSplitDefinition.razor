@using System.Reflection;
@using System.ComponentModel.DataAnnotations;
@inject DialogService DialogService
@inject HttpClient Http
@inject NotificationService NotificationService

<RadzenListBox @bind-Value=@selectedSplitDefinitionId Data=@SplitDefinitions TextProperty="Name" ValueProperty="Id" Style="width: 100%; height:100%;" />
<RadzenButton Click=@Submit >Select</RadzenButton>


@code {
    [Parameter]
    public IEnumerable<SplitDefinition> SplitDefinitions { get; set; }
    int selectedSplitDefinitionId;

    void Submit()
    {
        var selectedSplitDefinition = SplitDefinitions.FirstOrDefault(x => x.Id == selectedSplitDefinitionId);
        DialogService.Close(selectedSplitDefinition);
    }
}
