@inject NavigationManager Nav

<RadzenPanelMenuItem Selected="selected" Click="args => To(Href)" Text="@Text" Icon="@Icon" />

@code {
    [Parameter] public string Href { get; set; } = null;
    [Parameter] public string Icon { get; set; } = null;
    [Parameter] public string Text { get; set; } = null;

    private bool selected = false;

    private void To(string href)
    {
        selected = true;
        Nav.NavigateTo(href);
    }
}
